   <title>ticketMe| Tài khoản</title>
  </head>
  <body>
<div class="container">
  
    
<% include ./partials/header %>
<div id="form-control">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <a href="/home" style="text-decoration: none">ticketMe</a>
      </h1>
      <% include ./partials/messages %>
      <div class="password-guidelines">
          <h3 class="guidelines-header">Yêu cầu mật khẩu</h3>
          <div class="guidelines-description">
            <p class="pass-rule">Có ít nhất 6 ̉kí tự</p>
            <p class="pass-rule">Có ít nhất 1 kí tự số </p> 
            <p class="pass-rule">Bao gồm kí tự đặc biệt</p>
            <p class="pass-rule">Khớp mật khẩu</p>
          </div>
         </div>
        <div class="form form-register active" id="dangki">
            <form action="/user/account/register" method="POST">
              <div class="form-group">
               
                <input
                  type="name"
                  id="name"
                  name="name"
                 placeholder="Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
              <div class="form-group">
              
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
              
                <input
                  type="password"
                  id="password"
                  name="password"
                placeholder="Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                  onkeyup="handleValid()"

                />
              </div>
              <div class="form-group">
           
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  placeholder="Confirm"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                  onkeyup="handleConfirmPass()"

                />
              </div>
              <button type="submit" id="moveBtn" disabled>
                <strong>Tiếp tục</strong>
              </button>
              <p class="lead mt-4"><a class="single" href="#" data-target="dangnhap">Đăng nhập</a></p>
            </form>
        </div>
        
        <div class="form form-login" id="dangnhap">
            <form action="/user/account/login" method="POST">
              <div class="form-group">
              
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
             <div class="form-group">
              
                <input
                  type="password"
                  id="password"
                  name="password"
                placeholder="Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"

                />
              </div>
              <button type="submit" id="moveBtn">
                <strong>Tiếp tục</strong>
              </button>
              <p class="lead mt-4"><a style="text-decoration: none;" href="/user/reset">Quên mật khẩu? </a> <a class="single" href="#" data-target="dangki">Đăng kí</a></p>
            </form>
        </div>
      
    </div>
  </div>
</div>
<% include ./partials/footer %>

<script src="/user.js"></script>
<script src="/validation.js"></script>

 <style>
   
    body{
      font-family: 'Montserrat', sans-serif;
      background-color: #f9f9f9;

    }
    h1{
      margin-bottom:20px;
      color:var(--main);
    }
    .form-login,.form-register{
      display:none;
    }
    .active{
      display:block;
      animation: fadein 0.5s;
    }
     input{
      width: 70%;
      height: 25px;
      border:none;
      border-bottom: 1px solid #d1d5da;
      font-family: 'Montserrat', sans-serif;
      height:3em;
    }
    .form{
      padding:20px 0;
    }
    .form-register{
      width:25%;
      height:350px;
      margin-left:45%;
      transform:translate(-50%,0);
      border-radius:2px;
      border: 1px solid #d1d5da;
      background: #ffffff;
      
     

    }
    .form-login{
      width:25%;
      height:250px;
      margin-left:50%;
      transform:translate(-50%,0);
      border-radius:2px;
      border: 1px solid #d1d5da;
      background: #ffffff;

    }
    .password-guidelines{
      position: absolute;
      float: right;
      right: 25%;
      border: 1px solid #d1d5da;
      width: 200px;
      text-align: left;
      padding: 0px 10px;
      border-radius: 2px;
      background: #ffffff;

    }
    form .form-group{
      padding-bottom :20px;
    }
    #form-control{
      text-align: center;
      margin-top: 100px;
    }
    h1{
      text-align: center;
    }

    #moveBtn{
      width: 60%;
      height: 40px;
      background: var(--main);
      color:white;
      font-family: 'Montserrat', sans-serif;
      border: none;
      border-radius: 2px;

    }
    #moveBtn:disabled{
      background: #d1d5da;
    }
    @keyframes fadein {
  0%{
    opacity: 0;
  }
  50%{
    opacity: 0.5;
  }
  100%{
    opacity: 1;
  }
}
